<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="group.study.mobile.ibm.com.quote.QuoteEditFragment"
    android:orientation="vertical"
    android:padding="16dp">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="5"
        tools:text="Quote text goes here"
        android:hint="@string/quote_text_hint"
        android:textColorHint="@color/gray"
        android:id="@+id/quoteEditText" />

    <EditText
        android:id="@+id/quoteAuthorEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textAlignment="textEnd"
        android:layout_gravity="end"
        tools:text="Quote author"
        android:hint="@string/quote_author_hint"/>

</LinearLayout>
